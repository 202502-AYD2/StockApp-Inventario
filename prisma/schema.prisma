// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Roles según el PDF (ADMIN y USER) 
enum EnumRole {
  ADMIN
  USER
}

// 2. Tipos de movimiento (Entrada o Salida) [cite: 43]
enum EnumMovementType {
  ENTRADA
  SALIDA
}

// 3. Modelo de Usuario
model User {
  id        String   @id @default(uuid())
  email     String   @unique // Para el login [cite: 12]
  name      String?  // Nombre para mostrar en el sidebar [cite: 32]
  role      EnumRole @default(USER) // Rol por defecto
  image     String?  // Foto del usuario [cite: 32]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relaciones
  movements Movement[] // Un usuario hace muchos movimientos [cite: 47]
  createdMaterials Material[] // Un usuario (ADMIN) crea materiales [cite: 55]
}

// 4. Modelo de "Maestro" (Inventario/Material)
// [cite: 54, 55] "Tabla para visualizar Maestros... id, nombre, saldo, creador"
model Material {
  id          String   @id @default(uuid())
  name        String
  saldo       Int      // Saldo actual del inventario [cite: 55]
  createdAt   DateTime @default(now())
  
  // Quién creó el maestro
  createdBy   User     @relation(fields: [createdById], references: [id])
  createdById String

  // Relaciones
  movements   Movement[] // Un material tiene muchos movimientos
}

// 5. Modelo de Transacción (Movimiento)
// [cite: 40] "Tabla para visualizar movimientos... id, fecha, cantidad, responsable"
model Movement {
  id          String           @id @default(uuid())
  type        EnumMovementType // ENTRADA o SALIDA [cite: 43]
  quantity    Int              // Cantidad de elementos [cite: 45]
  date        DateTime         @default(now()) // Fecha del movimiento [cite: 40]

  // Relaciones
  material    Material         @relation(fields: [materialId], references: [id])
  materialId  String           // El maestro al que afecta

  user        User             @relation(fields: [userId], references: [id])
  userId      String           // La persona que ejecutó el movimiento [cite: 40]
}